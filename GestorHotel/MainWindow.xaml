<Window x:Class="GestorHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorHotel"
        mc:Ignorable="d"
        Title="Gestor de Hotel" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Navigation Menu -->
        <Menu Grid.Row="0" Background="#2C3E50" Foreground="White" Padding="5">
            <MenuItem Header="Habitaciones" Click="NavigateToHabitaciones" Foreground="White" FontSize="14" Padding="10,5"/>
            <MenuItem Header="Huéspedes" Click="NavigateToHuespedes" Foreground="White" FontSize="14" Padding="10,5"/>
            <MenuItem Header="Reservas" Click="NavigateToReservas" Foreground="White" FontSize="14" Padding="10,5"/>
            <MenuItem Header="Reseñas" Click="NavigateToResenas" Foreground="White" FontSize="14" Padding="10,5"/>
            <MenuItem Header="Empleados" Click="NavigateToEmpleados" Foreground="White" FontSize="14" Padding="10,5"/>
        </Menu>
        
        <!-- Content Frame -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
