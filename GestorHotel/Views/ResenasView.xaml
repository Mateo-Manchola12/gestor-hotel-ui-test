<Page x:Class="GestorHotel.Views.ResenasView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestorHotel.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1100"
      Title="ResenasView">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                <!-- Title -->
                <TextBlock Text="Reseñas de Huéspedes" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,30"/>
                
                <!-- Rating Summary -->
                <Border Background="#1e1536" CornerRadius="12" Padding="30" Margin="0,0,0,30" BorderBrush="#2d2055" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,40,0">
                            <TextBlock Text="4.8" FontSize="64" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="24" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                            <TextBlock Text="Basado en 256 reseñas" FontSize="13" Foreground="#8b8ba7" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="5★" FontSize="14" Foreground="#b8b8d1" Margin="0,0,10,0"/>
                                <Border Grid.Column="1" Background="#2d2055" Height="8" CornerRadius="4">
                                    <Border Background="#4ade80" HorizontalAlignment="Left" Width="200" CornerRadius="4"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="180" FontSize="14" Foreground="#8b8ba7" Margin="10,0,0,0"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="4★" FontSize="14" Foreground="#b8b8d1" Margin="0,0,10,0"/>
                                <Border Grid.Column="1" Background="#2d2055" Height="8" CornerRadius="4">
                                    <Border Background="#4ade80" HorizontalAlignment="Left" Width="60" CornerRadius="4"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="52" FontSize="14" Foreground="#8b8ba7" Margin="10,0,0,0"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="3★" FontSize="14" Foreground="#b8b8d1" Margin="0,0,10,0"/>
                                <Border Grid.Column="1" Background="#2d2055" Height="8" CornerRadius="4">
                                    <Border Background="#f59e0b" HorizontalAlignment="Left" Width="20" CornerRadius="4"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="18" FontSize="14" Foreground="#8b8ba7" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Reviews List -->
                <TextBlock Text="Reseñas Recientes" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                
                <!-- Review Card 1 -->
                <Border Background="#1e1536" CornerRadius="12" Padding="25" Margin="0,0,0,15" BorderBrush="#2d2055" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#7c3aed" Offset="0"/>
                                        <GradientStop Color="#5b21b6" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Xylara-Torak" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="Suite 401 - May 2024" FontSize="13" Foreground="#8b8ba7"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="⭐⭐⭐⭐⭐" FontSize="18" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="¡Experiencia intergaláctica increíble! Las vistas a la nebulosa desde la suite eran espectaculares. El servicio fue de primera clase y el personal muy atento. Definitivamente volveré en mi próximo viaje espacial." 
                                   FontSize="14" 
                                   Foreground="#b8b8d1" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Review Card 2 -->
                <Border Background="#1e1536" CornerRadius="12" Padding="25" Margin="0,0,0,15" BorderBrush="#2d2055" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#3b82f6" Offset="0"/>
                                        <GradientStop Color="#1d4ed8" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Captain Vlex" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="Estelar 305 - May 2024" FontSize="13" Foreground="#8b8ba7"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="⭐⭐⭐⭐⭐" FontSize="18" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Perfecto para viajeros espaciales. Las cápsulas de descanso son cómodas y la tecnología es de última generación. La ubicación es ideal para explorar la estación." 
                                   FontSize="14" 
                                   Foreground="#b8b8d1" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Review Card 3 -->
                <Border Background="#1e1536" CornerRadius="12" Padding="25" Margin="0,0,0,15" BorderBrush="#2d2055" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="50" Height="50" Margin="0,0,15,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#10b981" Offset="0"/>
                                        <GradientStop Color="#059669" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Dr. Zorgul" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,3"/>
                                <TextBlock Text="Galáctica 708 - April 2024" FontSize="13" Foreground="#8b8ba7"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="⭐⭐⭐⭐" FontSize="18" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Muy buena estadía. Las instalaciones están bien mantenidas y el ambiente es relajante. Solo un pequeño problema con el sistema de gravedad artificial, pero lo resolvieron rápidamente." 
                                   FontSize="14" 
                                   Foreground="#b8b8d1" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
